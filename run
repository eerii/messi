#!/bin/bash

OPTS="--console plain -I ../logger.init.gradle.kts"
RUN="bootRun"

if [ "$1" == "cliente" ]; then
    APP="-p cliente"
    if [[ "$2" != *"-w"* ]]; then
        RUN="run"
    fi
elif [ "$1" == "servidor" ]; then
    APP="-p servidor"
else
    echo "Usage: $0 cliente|servidor [\"args\"] [http port]"
    exit 1
fi

if [ "$#" -gt 2 ]; then
    PORT="env SERVER_PORT=$3"
fi

CMD="$PORT ./gradlew $OPTS $APP"

if [ "$1" == "servidorWeb" ]; then
    xdg-open "http://localhost:8080/h2-console"
fi

if [ "$#" -gt 1 ]; then
    $CMD $RUN --args="$2"
else
    $CMD $RUN
fi