<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cliente.RegisterView">
    <VBox alignment="CENTER_LEFT" spacing="15" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="40.0">
        <Label text="Registrarse" styleClass="title-2" />
        <Label text="Usuario:" />
        <TextField fx:id="usernameField" />
        <Label text="Contraseña:" />
        <PasswordField fx:id="passwordField" />
        <Label text="Confirmar Contraseña:" />
        <PasswordField fx:id="confirmPasswordField" />
        <HBox spacing="10">
            <Button onAction="#handleRegisterButtonAction" text="Registrarse" />
            <Button onAction="#handleGoToLoginButtonAction" text="Ir a Iniciar Sesión" />
        </HBox>
        <Label fx:id="errorLabel" visible="false" style="-fx-text-fill: -color-danger-fg" />
    </VBox>
</AnchorPane>